{
    "version": 2,
    "rewrites": [
        {
            "source": "/chat",
            "destination": "app.py"
        },
        {
            "source": "/health",
            "destination": "app.py"
        },
        {
            "source": "/dashboard",
            "destination": "dashboard.html"
        },
        {
            "source": "/",
            "destination": "index.html"
        },
        {
            "source": "/(.*)",
            "destination": "$1"
        }
    ],
    "env": {
        "GEMINI_API_KEY": "@gemini_api_key"
    }
}